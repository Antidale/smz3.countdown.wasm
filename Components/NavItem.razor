<div class="nav-item px-2">
    <NavLink class="nav-link navbar-brand" href="@LinkRef" Match="NavLinkMatch.All">
        &nbsp;&nbsp;<span class="oi @OiIcon" aria-hidden="true"></span> @LinkName
    </NavLink>
</div>

@code {
    [Parameter]
    public string OiIcon { get; set; } = string.Empty;

    [Parameter]
    public string LinkName { get; set; } = string.Empty;

    [Parameter] 
    public string LinkRef { get; set;} = string.Empty;

}
