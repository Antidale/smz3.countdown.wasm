@using smz3.countdown.wasm.Components;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Tellah Life</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <NavItem OiIcon="oi-home" LinkName="Countdown" LinkRef=""></NavItem>
        <NavItem OiIcon="oi-task" LinkName="Items" LinkRef="ItemSelection"></NavItem>
        <NavItem OiIcon="oi-map-marker" LinkName="Locations" LinkRef="Locations"></NavItem>
        <NavItem OiIcon="oi-beaker" LinkName="Poison" LinkRef="Poison"></NavItem>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
