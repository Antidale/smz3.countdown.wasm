@page "/locations"
@using smz3.countdown.wasm.Services
@inject LocationService LocationService
<PageTitle>Locations</PageTitle>
<h3>Locations</h3>
<p>Setting your own location groupings is not yet an available feature. In the meantime, this page lists all the places that are grouped under each heading</p>

@foreach (var locationGroup in LocationService.Locations)
{
    <h4>@locationGroup.Key</h4>
    <div class="container">
        <div class="row">
            @foreach (var location in locationGroup.Value)
            {
                <div class="col-4">@location</div>
            }
        </div>
    </div>
    <br />
}

